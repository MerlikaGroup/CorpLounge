<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base shadow -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Lighter shadow color with increased alpha (33%) -->
            <corners android:radius="50dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>

    <!-- Middle shadow -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#55000000" /> <!-- Medium shadow color with increased alpha (55%) -->
            <corners android:radius="50dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>

    <!-- Outer shadow -->
    <item android:right="6dp" android:left="6dp" android:top="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#77000000" /> <!-- Darker shadow color with increased alpha (77%) -->
            <corners android:radius="50dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>

    <!-- Content background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#77000000" /> <!-- Background color of your CardView -->
            <corners android:radius="50dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
</layer-list>
