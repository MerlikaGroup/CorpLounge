<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#4A4AB1" /> <!-- Change color to your desired blueish color -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Shadow -->
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#D52A3675" /> <!-- Change shadow color if needed -->
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
